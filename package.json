{
  "name": "hashnode",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "deploy": "cross-env DOCKER_BUILDKIT=1 pulumi up -y --stack=prod --cwd=./src/infra",
    "dev": "yarn loadenv && cross-env NODE_ENV=development webpack --watch --no-stats",
    "format": "prettier --write . && sort-package-json",
    "loadenv": "pulumi stack output --show-secrets --json --stack=prod --cwd=./src/infra > global_environment.json",
    "prepare": "husky install",
    "serve:dev": "cross-env NODE_ENV=development nodemon --watch ./dist/backend/ ./dist/backend/bundle.js",
    "serve:prod": "cross-env NODE_ENV=production node ./dist/backend/bundle.js",
    "test": "yarn tsc --noEmit && jest"
  },
  "dependencies": {
    "applicationinsights": "^2.2.0",
    "axios": "^0.24.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "express": "^5.0.0-alpha.8",
    "express-openid-connect": "^2.5.2",
    "mongodb": "^4.2.2",
    "mongoose": "^6.1.5"
  },
  "devDependencies": {
    "@auth0/nextjs-auth0": "^1.6.2",
    "@azure/app-configuration": "^1.3.1",
    "@azure/arm-appservice": "^10.0.0",
    "@azure/identity": "^2.0.1",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@pulumi/auth0": "^2.3.2",
    "@pulumi/azure-native": "^1.49.0",
    "@pulumi/azuread": "^5.11.0",
    "@pulumi/docker": "^3.1.0",
    "@pulumi/pulumi": "^3.21.0",
    "@pulumi/random": "^4.3.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@types/cron": "^1.7.3",
    "@types/jest": "27.0.2",
    "@types/node": "14.14.33",
    "@types/react": "17.0.30",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "~5.3.0",
    "@typescript-eslint/parser": "~5.3.0",
    "babel-jest": "27.2.3",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "eslint": "8.2.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "27.2.3",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "^3.34.7",
    "react-router-dom": "^6.2.1",
    "react-test-renderer": "17.0.2",
    "regenerator-runtime": "0.13.7",
    "sass": "1.43.2",
    "sort-package-json": "^1.53.1",
    "ts-jest": "27.0.5",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslib": "^2.0.0",
    "typescript": "~4.4.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^5.3.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.2.2",
    "yarn": "^1.22.17"
  },
  "engines": {
    "node": ">=14"
  },
  "comments": {
    "warning": "package.json update will cause a huge Docker recompile, that might take a while",
    "dependencies": "there is no difference between devDependencies and dependencies, install everything into dependencies"
  }
}
