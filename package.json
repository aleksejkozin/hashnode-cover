{
  "name": "hashnode",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "serve:dev": "yarn loadenv && concurrently --raw 'nodemon ./src/backend/main.ts' 'nodemon ./src/workers/main.ts' 'webpack --mode=development --watch'",
    "serve:prod": "cross-env NODE_ENV=production concurrently --raw --kill-others-on-fail 'ts-node ./src/backend/main.ts' 'ts-node ./src/workers/main.ts'",
    "build": "webpack --mode=production",
    "format": "prettier --write .",
    "test": "tsc --noEmit && jest",
    "loadenv": "pulumi stack output --show-secrets --json --stack=prod --cwd=./src/infra > ./src/common/global_environment.json",
    "deploy": "cross-env DOCKER_BUILDKIT=1 pulumi up -y --stack=prod --cwd=./src/infra",
    "prepare": "husky install"
  },
  "comments": {
    "warning": "package.json update will cause a huge Docker recompile, that might take a while",
    "dependencies": "there is no difference between devDependencies and dependencies, install everything into dependencies"
  },
  "nodemonConfig": {
    "ext": "js,ts,tsx,jsx,html,json",
    "watch": [
      "src"
    ],
    "ignore": [
      "*/dist/*"
    ]
  },
  "dependencies": {
    "react-router-dom": "^6.2.1",
    "react-query": "^3.34.7",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "html-webpack-plugin": "^5.5.0",
    "webpack-dev-middleware": "^5.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "@auth0/nextjs-auth0": "^1.6.2",
    "@azure/app-configuration": "^1.3.1",
    "@azure/arm-appservice": "^10.0.0",
    "@azure/identity": "^2.0.1",
    "@nrwl/cli": "^13.4.2",
    "@nrwl/next": "^13.4.2",
    "@nrwl/node": "^13.4.2",
    "@nrwl/nx-cloud": "^13.0.1",
    "@nrwl/workspace": "^13.4.2",
    "applicationinsights": "^2.2.0",
    "axios": "^0.24.0",
    "concurrently": "^6.5.1",
    "@types/cron": "^1.7.3",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "env-cmd": "^10.1.0",
    "mongodb": "^4.2.2",
    "mongoose": "^6.1.5",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tslib": "^2.0.0",
    "typescript": "~4.4.3",
    "yarn": "^1.22.17",
    "@pulumi/auth0": "^2.3.2",
    "@pulumi/azure-native": "^1.49.0",
    "@pulumi/azuread": "^5.11.0",
    "@pulumi/docker": "^3.1.0",
    "@pulumi/pulumi": "^3.21.0",
    "@pulumi/random": "^4.3.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "27.0.2",
    "@types/node": "14.14.33",
    "@types/react": "17.0.30",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "~5.3.0",
    "@typescript-eslint/parser": "~5.3.0",
    "babel-jest": "27.2.3",
    "commander": "^8.3.0",
    "core-js": "^3.6.5",
    "cypress": "^9.1.0",
    "eslint": "8.2.0",
    "eslint-config-next": "12.0.7",
