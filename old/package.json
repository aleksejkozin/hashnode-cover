{
  "version": "1.0.0",
  "name": "hashnode-cover",
  "maintainers": [
    {
      "name": "Aleksey Kozin",
      "email": "cirnotoss@gmail.com"
    }
  ],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "dev": "yarn withenv:dev lerna run --parallel dev",
    "start": "yarn withenv lerna run --parallel start",
    "deploy": "lerna run deploy",
    "build": "lerna run build",
    "withenv:dev": "dotenv -- ts-node ./packages/tools/src/loadEnvironmentFromAppConfig > .env.global && dotenv -e .env -e .env.global --",
    "withenv": "dotenv -- node ./packages/tools/dist/loadEnvironmentFromAppConfig > .env.global && dotenv -e .env -e .env.global --"
  },
  "private": true,
  "dependencies": {
    "dotenv-cli": "^4.1.1",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.3.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-next": "^12.0.7",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "typescript": "^4.5.4",
    "webpack-node-externals": "^3.0.0",
    "ts-loader": "^9.2.6",
    "node-loader": "^2.0.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
