{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2020",
      "DOM"
    ],
    "allowJs": true,
    "jsx": "react",
    "isolatedModules": false,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // This will allow importing monorepo modules
    "baseUrl": "./packages/"
  },
  "exclude": [
    "node_modules"
  ]
}
