{
  "root": "packages/cover-infrastructure",
  "sourceRoot": "packages/cover-infrastructure/src",
  "projectType": "application",
  "targets": {
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "cd packages/cover-infrastructure && pulumi up -y --stack=prod",
        "parallel": false
      }
    },
    "loadenv": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "pulumi stack output --show-secrets --json --stack=prod > output.json",
        "cwd": "packages/cover-infrastructure"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/cover-infrastructure/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/cover-infrastructure"
      ],
      "options": {
        "jestConfig": "packages/cover-infrastructure/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
